<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_blue"
    >
    <LinearLayout
        android:visibility="gone"

        android:background="@drawable/head_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:text="Project IOT"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/titleText"
        android:layout_gravity="center"
        android:visibility="gone"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WiFi Connection Status"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/wifiStatusText"
        android:visibility="gone"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checking Wi-Fi..."
        android:layout_gravity="center"
        android:gravity="center"
         android:textSize="13sp"
        android:textColor="#333"
        android:layout_below="@id/titleText"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/deviceList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"

        android:text="  Device List  "
        android:layout_below="@id/wifiStatusText"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_shape"
        android:textColor="#fff"
        android:padding="12dp"/>
    <Button
        android:id="@+id/controller1Button"
        android:layout_width="wrap_content"
        android:visibility="gone"

        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="  Mode 1  "
        android:layout_below="@id/wifiStatusText"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shape"
        android:textColor="#fff"
        android:padding="12dp"/>

    <Button
        android:id="@+id/controller2Button"
        android:layout_width="wrap_content"
        android:visibility="gone"

        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="  Mode 2  "
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_shape"
        android:layout_below="@id/controller1Button"
        android:layout_marginTop="20dp"
         android:textColor="#fff"
        android:padding="12dp"/>
    <ImageView
        android:src="@drawable/logo_new"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
</LinearLayout>
